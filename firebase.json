{
  "hosting": {
    "public": ".",             
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "**/*.css",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      }
    ],
    "rewrites": [
      { "source": "/post/Aura", "destination": "/post/Aura.html" },
      { "source": "/post/bolero", "destination": "/post/bolero.html" },
      { "source": "/post/alto-k10", "destination": "/post/alto-k10.html" },
      { "source": "/post/tvs", "destination": "/post/tvs.html" },
      { "source": "/post/Maruti", "destination": "/post/Maruti.html" },
      { "source": "/post/Toyota", "destination": "/post/Toyota.html" },
      { "source": "/post/Marazzo", "destination": "/post/Marazzo.html" },
      { "source": "/post/Suzuki", "destination": "/post/Suzuki.html" },
      { "source": "/post/TVSFiero125", "destination": "/post/TVSFiero125.html" },
      { "source": "/post/Rajdoot", "destination": "/post/Rajdoot.html" },
      { "source": "/post/Wagon", "destination": "/post/Wagon.html" },
      { "source": "/post/Alto", "destination": "/post/Alto.html" },
      { "source": "/post/Cervo", "destination": "/post/Cervo.html" },
      { "source": "/post/SuzukiCervo", "destination": "/post/SuzukiCervo.html" }
    ]
  }
}
